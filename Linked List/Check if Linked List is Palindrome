/*You are required to complete this method */
bool isPalindrome(Node *head)
{
    //Your code here
    deque <int> q;
    Node *cur=head;
    while(cur!=NULL)
    {
        q.push_back(cur->data);
        cur=cur->next;
    }
    
    while(q.size() >1)
    {
        if(q.front()==q.back())
        {
            q.pop_front();
            q.pop_back();
        }
        else
        {
            return false;
        }
        
    }
    return true;
    
}

